                            <DataTemplate>
                                <Grid 
                                      >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition  />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Property1}"
                                               VerticalAlignment="Center"/>
                                    <TextBlock 
                                               VerticalAlignment="Center"
                                               Grid.Column="1"
                                               Margin="0 0 20 0">
                                        <Run Text="&#xe961;"
                                             x:Name="Run2"
                                             Foreground="#635f8f"
                                             FontFamily="{StaticResource PanuonIconFont}"/>
                                        <Run Text="{Binding Property2}"/>
                                    </TextBlock>
                                    <TextBlock 
                                               VerticalAlignment="Center"
                                               Grid.Column="2"
                                               >
                                        <Run Text="{Binding Property3}"/>
                                        <Run Text="&#xe961;"
                                             x:Name="Run3"                                           
                                             FontFamily="{StaticResource PanuonIconFont}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Property4}"
                                               VerticalAlignment="Center"
                                               Grid.Column="3"/>
                                    <Button Background="Transparent"
                                            Foreground="White"
                                            Content="&#xe941;"
                                            FontSize="18"
                                            Grid.Column="4"
                                            pu:ButtonHelper.HoverForeground="Gold"
                                            FontFamily="{StaticResource PanuonIconFont}"/>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver,RelativeSource={RelativeSource AncestorType=ListBoxItem,Mode=FindAncestor},Mode=OneWay}"
                                                 Value="True">
                                        <Setter TargetName="Run2"
                                                Property="Foreground"
                                                Value="#9656ff"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsRaise}"
                                                 Value="True">
                                        <Setter TargetName="Run3"
                                               Property="Text"
                                               Value="&#xe968;"/>
                                        <Setter TargetName="Run3"
                                                Property="Foreground"
                                                Value="#f06685"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>

                        </ListBox.ItemTemplate>
