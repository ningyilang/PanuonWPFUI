                                                        <DropShadowEffect BlurRadius="20"
                                                                           ShadowDepth="10"
                                                                           Direction="270"
                                                                          Opacity="0.5"/>
                                                    </Border.Effect>
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding ImageSource}"
                                                                    />
                                                    </Border.Background>
                                                    <Label Content="{Binding ExtendNumber,StringFormat='+0'}"
                                                               Visibility="Collapsed"
                                                               x:Name="TxtExtendNumber"
                                                               Width="40"
                                                               Height="40"
                                                               pu:LabelHelper.CornerRadius="20"
                                                               VerticalAlignment="Stretch"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Center"
                                                               VerticalContentAlignment="Center"
                                                               Background="gold"/> 
                                                </Border>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding ImageSource,Converter={StaticResource {x:Static purs:ConverterKeys.IsNullConverter}}}"
                                                                 Value="True">
                                                        <Setter TargetName="TxtExtendNumber"
                                                                Property="Visibility"
                                                                Value="Visible"/>
                                                        <Setter TargetName="borderHeader"
                                                                Property="Background"
                                                                Value="{x:Null}"/>
                                                        <Setter TargetName="borderHeader"
                                                                Property="BorderThickness"
                                                                Value="0"/>
                                                                
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=borderHeader,Path=IsMouseOver}"
                                                                 Value="True">
                                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1.1"
                                                                                ScaleY="1.1"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <pu:Card BorderThickness="0"
                                         Background="White"
                                         CornerRadius="10"
                                         Grid.Row="2"
                                         ShadowColor="#3480f1"
                                         pu:ShadowHelper.BlurRadius="20"
                                         pu:ShadowHelper.Opacity="0.5"
                                         pu:ShadowHelper.ShadowDepth="10"
                                         pu:ShadowHelper.Direction="330">
                                    <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <pu:RingProgressBar BorderBrush="#efefef"
                                                                Height="60"
                                                                Width="60"
                                                                Foreground="#3480F1"
                                                                Minimum="0"
                                                                Maximum="100"
                                                                Value="75"
                                                                BorderThickness="5"/>
                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Working Time"
                                                           Foreground="#B1B9D2"
                                                           Margin="10"
                                                           FontSize="15"/>
                                                <TextBlock Text="135H"
                                                           Margin="10"
                                                           Grid.Row="1"
                                                           FontWeight="Bold"
                                                           FontSize="30"/>
                                            </Grid>
                                        <!--<TextBlock Text="12"
                                                   FontSize="20"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   Grid.Row="1"
                                                   VerticalAlignment="Bottom"
                                                   Margin="15 0"/>
                                        <TextBlock Text="In progress&#13;Project"
                                                   Grid.Row="2"
                                                   Margin="15 10"
                                                   Foreground="White"/>-->
                                    </Grid>
                                </pu:Card>
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <!--<GroupBox Grid.Row="3"                                 
                                  pu:GroupBoxHelper.HeaderFontWeight="Bold"
                                  pu:GroupBoxHelper.HeaderFontSize="18"
                                  pu:GroupBoxHelper.HeaderSeparatorVisibility="Collapsed"
