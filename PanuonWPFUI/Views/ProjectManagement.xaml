                                                <TextBlock Text="Steak Project"
                                                           Margin="0 0 0 10" />
                                                <StackPanel Orientation="Horizontal">
                                                    <Icon:PackIconMaterial Kind="Link" Foreground="Gray"/>
                                                    <TextBlock Text="Design Brief" Margin="10 0 " Foreground="Gray"/>
