                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Icon:PackIconIonicons Kind="AddMD" Margin="5 0">
                                            </Icon:PackIconIonicons>
                                                                  
                                            <TextBlock Text="Create" Margin="10 0"
                                                       Grid.Column="1" />
                                        </Grid>
                                    </Button.Content>
                                </Button>
                            </pu:TabControlHelper.EndControl>

                            <TabItem Header="Active Task">
                                <StackPanel Margin="0 0 0 15">
                                    <pu:Card Height="80"
                                             Margin="0 15 0 0"
                                             BorderThickness="0"
                                             Background="White"
                                             CornerRadius="10"
                                             ShadowColor="Gray"
                                             pu:ShadowHelper.ShadowDepth="7"
                                             pu:ShadowHelper.BlurRadius="25"
                                             pu:ShadowHelper.Direction="270"
                                             pu:ShadowHelper.Opacity="0.6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Width="{Binding ActualHeight,RelativeSource={RelativeSource Self}}"
                                                   Margin="10" pu:LabelHelper.CornerRadius="5" Background="#69d0cd"
                                                   Content="{Icon:Material Kind=Home, Width=30, Height=30}"
                                                   HorizontalContentAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   Foreground="White"                                                   
                                                   />
                                            <StackPanel Grid.Column="1"
                                                        Margin="15 0 0 0"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="Steak Project"
                                                           Margin="0 0 0 10" />
                                                <StackPanel Orientation="Horizontal">
                                                    <Icon:PackIconMaterial Kind="Link" Foreground="Gray"/>
